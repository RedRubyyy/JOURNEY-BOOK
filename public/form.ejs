<body class="h-screen w-full bg-gray-950 bg-cover bg-no-repeat bg-center"
style="background-image: linear-gradient(rgba(0, 0, 0, 0.481) , #09090b) , url(images/three-friends-with-their-arms-around-sitting-top-mountain.jpg);
    box-shadow: 0rem 0rem 10rem 5rem black inset;">

    <div class=" m-auto" style="padding-top: 20vh;">
        <!-- USER FORM -->
        <form action="/user-push" method="post" name="client" itemid="client" class="text-center max-w-lg backdrop-blur-md border-teal-700 border-2 rounded-lg shadow-lg shadow-teal-700 m-auto p-10 flex flex-col form-active" id="client-form">
            <h1 class="text-4xl mb-10 text-teal-500">PROFIL ANDA</h1>
